<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.outsystems.outbuilding.MainActivity">

	<!-- Using TouchImageView -->
	<!-- https://github.com/MikeOrtiz/TouchImageView -->
	<view
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		class="com.outsystems.outbuilding.TouchImageView"
		android:src="@drawable/power_rangers"
		android:id="@+id/touchImageView"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true" />

	<LinearLayout
		android:id="@+id/blackBackground"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:background="#c0000000"
		android:visibility="invisible"/>

	<AutoCompleteTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/autoCompleteTextView"
		android:background="@drawable/where_to_shape"
		android:textAlignment="center"
		android:hint="@string/where_to"
		android:textSize="18sp"
		android:inputType="textPersonName"
		android:ems="10"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="55dp" />

</RelativeLayout>
